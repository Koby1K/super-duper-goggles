    <h2>The CIS Strikes Back!</h2></br>
    Emperor UNA has executed Order 486 and the war has officially begun...

  </br><h1>May Node and Express be with you.</h1>

  
</br> <section data-position="add-quote">
 Leave a Message for your Allies.</br>
  
</br> <form method="POST" action="/addQuote">
          <label for="speaker">Name</label>
            <input name="speaker"></br>
          <label for="quote_name">Quote</label>
            <input name="quote_name"></br>
         </br> <button type="submit">Submit</button>
        </form>
      </section>
  
      <section data-position="update-quote">
        <div>
          <h2>Darth Barry invades!</h2>
          <p>
            Replace first Middle Row Jedi's quote with a quote written by Darth Barry
          </p>
          <button id="update-button">Replace Jedi's quote</button>
        </div>
      </section>
  
      <section data-position="delete-quotes">
        <div>
          <h2>Remove Darth Barry!</h2>
          <p>
            Delete one of Darth Barry's quote. 
          </p>
          <% for (var i=0; i< quoteData.length; i++) { %></br>
            <form method="POST" action="/deleteQuote/<%= quoteData[i]._id %>" style="display: inline-block">
            <%= quoteData[i].quote_name %> (<%= quoteData[i].speaker %>)
            <button action="/deleteQuote" value="delete"></button>
            </form>
          </br>
          <% } %>
        </div>
        <div id="message"></div>
      </section>
  
      <section data-position="quotes">
        <h2>Quotes</h2>
        <% for (i = 0; i < quoteData.length; i++) { %></br>
          <br/> <%= quoteData[i].quote_name %> <br/>(<%= quoteData[i].speaker %>)
        
        <% } %>
  
      <script src="app.js"></script>
    </body>
  </html>